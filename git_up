#!/bin/bash


dirs=( "~/wd/documents/code/bash_scripts" "~/wd/documents/code/kvz_jobs/kayveez_car_web_v2" "/mnt/c/codes/js/" )
msg=( "Pushing files for bash scripting..." "Pushing files for career web job portal..." "Pushing files for java script web development" )

for i in {0..2}
do
    echo "$msg[$i]"
    cd $dirs[$i]
    git add *
    git commit -a
    git push
done

echo "Updated all github repositories."
